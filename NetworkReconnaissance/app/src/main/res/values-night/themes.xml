<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NetworkReconnaissance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- Color in SupportActionBar, Buttons, etc. -->
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <!-- Color in notifications bar -->
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Color in inside primary/buttons -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/errorColorDark</item>
        <item name="colorOnError">?attr/colorOnPrimary</item>
    </style>
</resources>